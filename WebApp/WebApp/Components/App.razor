@inject NavigationManager Navigation

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<base href="/" />
	@* <link rel="stylesheet" href="bootstrap/bootstrap.min.css" /> *@
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
		  asp-fallback-href="bootstrap/bootstrap.min.css"
		  integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
	<link rel="stylesheet" href="app.css" />
	<link rel="stylesheet" href="WebApp.styles.css" />
	<link rel="icon" type="image/png" href="favicon.png" />
	@* <link href="_content/Syncfusion.Blazor/styles/bootstrap5-lite.css" rel="stylesheet" /> *@
	<link rel="stylesheet" href="https://cdn.syncfusion.com/blazor/29.1.33/styles/bootstrap5.css"
		  asp-fallback-href="_content/Syncfusion.Blazor/styles/bootstrap5-lite.css"
		  asp-fallback-test-class="e-control"
		  asp-fallback-test-property="font-size"
		  asp-fallback-test-value="12px" />
	<HeadOutlet @rendermode="InteractiveServer" />
</head>

<body>
	<Routes @rendermode="IsAdminPage?RenderMode.InteractiveAuto:RenderMode.InteractiveServer" />
	<script src="_framework/blazor.web.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
	<script src="https://cdn.syncfusion.com/blazor/29.2.11/syncfusion-blazor.min.js" type="text/javascript"></script>
	@* <script src="_content/Syncfusion.Blazor/scripts/syncfusion-blazor.min.js"></script> *@
	<script>
		if (!window.sfBlazor) { // the Syncfusion Blazor object is not present
		var fallbackScript = document.createElement("script");
		fallbackScript.setAttribute("src", "_content/Syncfusion.Blazor/scripts/syncfusion-blazor.min.js"); // path to static assets from the individual NuGet packages
		document.getElementsByTagName("body")[0].appendChild(fallbackScript);
		}
	</script>
</body>

</html>
@code {
	private string? currentRoute;
	private bool IsAdminPage => currentRoute?.StartsWith("admin") ?? false;
	protected override async Task OnInitializedAsync()
	{
		currentRoute = Navigation.ToBaseRelativePath(Navigation.Uri);
		await base.OnInitializedAsync();
	}
}